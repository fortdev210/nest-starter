// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email             String   @unique
  first_name        String?
  last_name         String?
  password          String
  is_email_verified Boolean  @default(false)
  created_at        DateTime @default(now()) @db.Timestamptz(3)
  updated_at        DateTime @updatedAt @db.Timestamptz(3)
  Plan              Plan[]

  @@map("users")
}

model Plan {
  id   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user User     @relation(fields: [user_id], references: [id])
  type PlanType

  user_id        String @db.Uuid
  eating_info_id String @unique @db.Uuid
  health_info_id String @unique @db.Uuid
  goal_info_id   String @unique @db.Uuid

  goal_info   GoalInfo?   @relation(fields: [goal_info_id], references: [id])
  eating_info EatingInfo? @relation(fields: [eating_info_id], references: [id])
  health_info HealthInfo? @relation(fields: [health_info_id], references: [id])

  @@map("plan")
}

model EatingInfo {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  cooking_skill    String
  plan_feed_number Int
  allergy_food     String[]
  type             String
  plan             Plan?

  @@map("eating_info")
}

model HealthInfo {
  id                            String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  plan                          Plan?
  general_rate                  HealthRate
  chronic_condition             String[]
  supplements_using             String[]
  exercise                      Json
  number_of_glasses_daily_water Int

  @@map("health_info")
}

model GoalInfo {
  id                  String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  plan                Plan?
  gender              Gender
  dob                 String
  start_date          String
  upper_arm           Int
  hips                Int
  waist               Int
  thigh               Int
  height              Int
  weight              Int
  highest_weight      Int
  goal_weight         Int
  front_photo_url     String
  left_photo_url      String
  non_scale_victories String[]

  @@map("goal_info")
}

enum HealthRate {
  excellent
  good
  fair
  poor
}

enum PlanType {
  weight_loss
  feel_better
}

enum Gender {
  male
  female
  other
}

enum AllergyFood {
  dairy
  shellfish
  gluten
  beef
  fish
  chicken
  pork
  nuts
  eggs
  soy
}
